<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewFeed" >

    <ImageButton
        android:id="@+id/btnCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/iconmortel" />

    <ListView
        android:id="@+id/feedViewListFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnCreatePost"
        android:layout_below="@+id/feedEditFeed"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:divider="@drawable/separator_line"
        android:dividerHeight="15dp"
        tools:listitem="@android:layout/simple_expandable_list_item_1" >

    </ListView>

    <TextView
        android:id="@+id/feedNamePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCreatePost"
        android:layout_alignLeft="@+id/feedTextInfo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/feedTextInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCreatePost"
        android:layout_toLeftOf="@+id/feedEditFeed"
        android:textAppearance="?android:attr/textAppearanceMedium" /> 

</RelativeLayout>