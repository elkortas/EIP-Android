<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewMessages" >

    <TextView
        android:id="@+id/messagesTextInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    
    <ListView
        android:id="@+id/messagesViewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:divider="@drawable/separator_line"
        android:dividerHeight="15dp"
        android:paddingTop="0dp"
        tools:listitem="@android:layout/simple_expandable_list_item_1" >

    </ListView>

    <Button
        android:id="@+id/btnMessagesSendMess"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/messagesViewList"
        android:layout_alignTop="@+id/textViewMessagesEditMessage"
        android:background="@color/greenNeerbyy"
        android:gravity="center"
        android:padding="5dp"
        android:text="Envoyez"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <EditText
        android:id="@+id/textViewMessagesEditMessage"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/messagesViewList"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Envoyez un message"
        android:textColor="@color/blue"
        android:textSize="20sp">
        
        <requestFocus />
        </EditText>
    
</RelativeLayout>
